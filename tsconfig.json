{
    "compilerOptions": {
      "target": "ES2020",               
      "module": "ESNext",             
      "outDir": "dist",                 
      "rootDir": "src",                 
      "strict": true,                   
      "esModuleInterop": true,        
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,            
      "resolveJsonModule": true,      
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "types": ["node"]
    },
    

    "include": ["src/**/*"],           
    "exclude": ["node_modules", "dist"]
}
  